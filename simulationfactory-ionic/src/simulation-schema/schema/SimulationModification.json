{
  "$id": "SimulationModification",
  "type": "object",
  "required": [ "id", "user" ],
  "properties": {
    "user": { "$ref": "User" },
    "id": { "type": "string" },
    "name": { "type": "string" },
    "response_timeout": {
      "type": "number",
      "minimum": 0
    },
    "prompt": { "type": "string" },
    "responses": {
      "type": "object",
      "patternProperties": {
        "^.*$": { "type": "string" }
      }
    },
    "round_count": {
      "type": "number",
      "minimum": 0
    },
    "user_count": {
      "type": "number",
      "minimum": 0
    },
    "resources": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "equation": { "type": "string" },
        "starting_value": {
          "type": "number",
          "minimum": 0
        }
      }
    },
    "user_resources": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "equation": { "type": "string" },
        "starting_value": {
          "type": "number",
          "minimum": 0
        }
      }
    }
  },
  "additionalProperties": false
}